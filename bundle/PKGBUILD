pkgname=niko
pkgver=3.0
pkgrel=3
pkgdesc="niko player"
arch=('any')
package() {
  cp -rf "/home/carpenter/Downloads/niko/opt" "$pkgdir"
  install -d "$pkgdir/usr/share/applications/"
  install -m644 "/home/carpenter/Downloads/niko/opt/niko/niko.desktop" "$pkgdir/usr/share/applications/"
  install -D -m644 /home/carpenter/Downloads/niko/niko.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/niko.png"
  install -D -m644 /home/carpenter/Downloads/niko/32x32.png "${pkgdir}/usr/share/icons/hicolor/32x32/apps/niko.png"
  install -D -m644 /home/carpenter/Downloads/niko/128x128.png "${pkgdir}/usr/share/icons/hicolor/128x128/apps/niko.png"
}
